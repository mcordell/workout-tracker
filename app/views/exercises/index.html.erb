<div class="container">
  <div class="content">
    <ul class="nav nav-tabs nav-justified">
      <li><%= link_to 'New Exercise', new_exercise_path %></li>
      <li class="active"><%= link_to 'All', exercises_path %></li>
    </ul>
    <div class="page-header">
      <h1>Listing <small>exercises</small></h1>
    </div>

    <table class="table">
      <thead>
        <tr>
              <th>Name</th>
              <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @exercises.each do |exercise| %>
          <tr>
                <td><%= exercise.display_name %></td>
				<td><%= cell(:index_actions, exercise).call(:show) %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


