<div class="container">
	<div class="content">
		<div class="row">

		<% if signed_in? %>
			<div class="col-md-7">
				<h4><%= current_program(current_user) %></h4>
			</div>

			<% if current_user.next_workout %>
				<div class="col-md-3">
					<%= link_to "Start Workout", doworkout_path(current_user.next_workout), class: "btn btn-lg btn-primary btn-block"%>
				</div>
			<% end %>
		<% else %>
			<div class="col-md-4 col-md-offset-3">
			  <%= link_to "Sign in", new_user_session_path, class: "btn btn-lg btn-primary btn-block"%>
			</div>
		<% end %>
		</div>
	</div>
</div>

