<div class="container">
  <div class="content">
    <ul class="nav nav-tabs nav-justified">
      <li class="active"><%= link_to 'Show', '#' %></li>
      <li><%= link_to 'Edit', edit_cycle_path(@cycle) %></li>
    </ul>
    <div class="page-header">
      <h1>Show</h1>
    </div>
        <p>
      <strong>Starting weight:</strong>
      <%= @cycle.starting_weight.value %>
    </p>

	<p>
      <strong>Program:</strong>
      <%= @cycle.program.name %>
    </p>


	<h3>Subcycles</h3>
	<% @cycle.subcycles.each do |subcycle|%>
		<h4>Subcycle <%= subcycle.number %> : </h4>
		<table>
			<th>Workout</th>
			<% subcycle.workouts.each do |workout| %>
				<tr>
					<td><%= link_to "Workout Link", workout_path(workout)  %></td>
				</tr>
			<% end %>
		</table>
	<% end %>
      </div>
</div>

